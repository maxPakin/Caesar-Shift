
@{
    ViewBag.Title = "Поиск ключа";
}

<div class="container shadow-card" style="padding: 20px 30px;">
    <h2>Результаты поиска</h2><hr />
    <h4>Текст был проанализирован частотным анализом. Наиболее подходящим ключом оказался <strong>@ViewBag.Keys[0].Shift</strong></h4>
    @using (Html.BeginForm("Download", "Home", FormMethod.Post))
    {
        <div class="container">
            <div class="row row-flex p-2">
                <div class="col-md-1 f-block bg-success">
                    @ViewBag.Keys[0].Shift
                </div>
                <div class="col m-block">
                    <textarea type="text" rows="5" name="text" class="m-textarea" readonly>@ViewBag.Keys[0].Text</textarea>
                </div>
                <div class="col-md-1 l-block bg-success">
                    <input name="fileName" type="hidden" value="@ViewBag.FileName">
                    <button type="submit" class="border-0 p-0 bg-transparent">
                        <img src="~/Content/icons/download.svg" style="max-width: 100%; max-height: 30px;" />
                    </button>
                </div>
            </div>
        </div>
    }
    <h4>Другие варианты:</h4>
    @for (int i = 1; i < ViewBag.Keys.Length; i++)
     {
        using (Html.BeginForm("Download", "Home", FormMethod.Post))
        {
            <div class="container">
                <div class="row row-flex p-2">
                    <div class="col-md-1 f-block">
                        @ViewBag.Keys[i].Shift
                    </div>
                    <div class="col m-block">
                        <textarea type="text" rows="5" name="text" class="m-textarea" readonly>@ViewBag.Keys[i].Text</textarea>
                    </div>
                    <div class="col-md-1 l-block">
                        <input name="fileName" type="hidden" value="@ViewBag.FileName">
                        <button type="submit" class="border-0 p-0 bg-transparent">
                            <img src="~/Content/icons/download.svg" style="max-width: 100%; max-height: 30px;" />
                        </button>
                    </div>
                </div>
            </div>
        }
    }
    
</div>